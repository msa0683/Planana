<div class="container">
	<div class="row">
		<div class="col-sm-8">

		<ul class="nav nav-tabs">
		  <li class="active"><a data-toggle="tab" href="#home">Parks</a></li>
		  <li><a data-toggle="tab" href="#menu1">Restaurants</a></li>
		</ul>

		<div class="tab-content">
		  <div id="home" class="tab-pane fade in active">
			{{#each parks}}
		  		<div id="{{this.place_id}}" class="row">
  				<div class="col-sm-4">
  					<img class="img-thumbnail"   src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference={{#each this.photos}}
									{{this.photo_reference}}
								{{/each}}&key=AIzaSyDAWpS82SOzjGchLjXznjhyCoVC8zxQw_s">
  				</div>
  				<div class="col-sm-6">
  					<h4> {{this.name}}</h4>
  					<input type="hidden" name="place-name" value="{{this.name}}">
  					<p>Address: {{this.formatted_address}}</p>
  					<input type="hidden" name="place-address" 
  					value="{{this.formatted_address}}">
					<p>Rating: {{{this.rating}}}</p>
						<input type="hidden" name="place-rating" value="{{{this.rating}}}">

					{{#each this.photos}}
								
					 	<input type="hidden" name="photo-ref" 
					 	value="{{this.photo_reference}}">

					{{/each}}
					

  				</div>
  				<div class="col-sm-2 button-add">
  					<button type="submit" data="{{this.place_id}}" class="btn btn-primary">Add</button>
  				</div>
  				<div class="col-sm-12"><hr></div>
				</div>	
			{{/each}} 
		  </div>
		  <div id="menu1" class="tab-pane fade">
			{{#each restaurants}}
		  		<div id="{{this.place_id}}" class="row">
  				<div class="col-sm-4">
  					<img class="img-thumbnail"   src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference={{#each this.photos}}
									{{this.photo_reference}}
								{{/each}}&key=AIzaSyDAWpS82SOzjGchLjXznjhyCoVC8zxQw_s">
  				</div>
  				<div class="col-sm-6">
  					<h4> {{this.name}}</h4>
  					<input type="hidden" name="place_name" value="{{this.name}}">
  					<p>Address: {{this.formatted_address}}</p>
  					<input type="hidden" name="place_address" 
  					value="{{this.formatted_address}}">
					<p>Rating: {{{this.rating}}}</p>
						<input type="hidden" name="place_rating" value="{{{this.rating}}}">

					{{#each this.photos}}
								
					 	<input type="hidden" name="photo_ref" 
					 	value="{{this.photo_reference}}">

					{{/each}}

  				</div>
  				<div class="col-sm-2 button-add">
  					<button type="submit" data="{{this.place_id}}" class="btn btn-primary">Add</button>
  				</div>
  				<div class="col-sm-12"><hr></div>
				</div>	
			{{/each}} 
		  </div>
		  

		  <div id="menu2" class="tab-pane fade">
		    <h3>Menu 2</h3>
		    <p>Some content in menu 2.</p>
		  </div>
		</div>
		</div> <!-- End of div class="col-sm-8" -->

		<div class="col-sm-4"> <!-- Start Itinerary Panel -->
		  	<div class="panel panel-default">
		  		<div class="panel-heading">Your Itinerary</div>
		  		<form action="/itinerary/" method="POST">
		  			<div id="itinerary-body" class="panel-body"></div>
		  			<div class="panel-footer text-center">
		  		  	<button type="submit" class="btn btn-success">Save
		  		  	</button></div>
		  		</form>
		  	</div>
		</div> <!-- End of div class="col-sm-4" -->
	</div> <!-- End of div class="row"-->
</div><!--div class="container"-->

<script type="text/javascript">
  $(document).ready( function() {
    $('#tab-container').easytabs();
  });

  $(".btn-primary").on("click",function (){
  		var place = $(this).attr("data");
  		$(this).remove();
  		$("#itinerary-body").append(document.getElementById(place));
  });



</script>